
link-color1 = #FFFFFF
link-color2 = #cbeefa

.hide-el
    display: none   

.link-shadow
    transition: display 6s;
    position: absolute
    left 0
    padding-left 7rem  
    width: 100%
    border-radius: 0.4rem
    height 75px
    .link-paper
        height 75px
        border-top:  3px solid link-color2
        border-radius: 0.4rem
        background: link-color1
        max-width 85%
        width 100%
        background-color: #ffffff
        box-shadow: 0 0.3rem 1rem #bfbfbf
        display: flex
        align-items: center
        .paper-controls
            display: flex
            width: 100%
            padding-left: 20px
            padding-right: 20px
            .link-box 
                    width: 100%
            .controls-action
                display: flex
                .action-link
                    margin-left: 10px
                    background-color: #2da562;
                    border-color: #2da562;
                    color: #fff;
                    display: inline-block;
                    padding: 0.5em 1em;
                    border-radius: 1.5em;
                    vertical-align: middle;
                    text-decoration: none;
                    text-align: center;
                    white-space: normal;
                    cursor: pointer;
                .action-relink    
                    margin-left: 10px
                    background-color: #a6a6a6;
                    border-color: #a6a6a6;
                    color: #fff;
                    display: inline-block;
                    padding: 0.5em 1em;
                    border-radius: 1.5em;
                    vertical-align: middle;
                    text-decoration: none;
                    text-align: center;
                    white-space: normal;
                    cursor: pointer;